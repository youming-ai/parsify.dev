# =============================================================================
# Parsify Environment Configuration Template
# =============================================================================
# Copy this file to .env.local for local development
# Use different values for staging and production environments

# =============================================================================
# Basic Environment Settings
# =============================================================================
ENVIRONMENT=development
NODE_ENV=development
LOG_LEVEL=debug
DEBUG=true

# =============================================================================
# API Configuration
# =============================================================================
API_VERSION=v1
API_BASE_URL=http://localhost:8787
API_TIMEOUT=30000
MAX_REQUEST_SIZE=10485760

# =============================================================================
# Security Configuration
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
ENCRYPTION_KEY=your-super-secret-encryption-key-minimum-32-characters

# Session configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=7200000

# CORS configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# Database Configuration (Cloudflare D1)
# =============================================================================
DATABASE_ID=local
DATABASE_NAME=parsify-dev
DATABASE_TIMEOUT=10000

# =============================================================================
# Cloudflare Storage Configuration
# =============================================================================

# R2 Buckets
R2_FILES_BUCKET_NAME=parsify-files-dev
R2_FILES_BUCKET_ID=local
R2_BACKUPS_BUCKET_NAME=parsify-backups-dev
R2_BACKUPS_BUCKET_ID=local

# KV Namespaces
KV_CACHE_ID=local
KV_SESSIONS_ID=local
KV_UPLOADS_ID=local
KV_ANALYTICS_ID=local

# Durable Objects
DURABLE_OBJECT_SESSION_MANAGER_SCRIPT=parsify-api
DURABLE_OBJECT_COLLABORATION_ROOM_SCRIPT=parsify-api
DURABLE_OBJECT_REALTIME_SYNC_SCRIPT=parsify-api

# =============================================================================
# Monitoring and Analytics
# =============================================================================

# Sentry (Error Tracking)
# Get your DSN from: https://sentry.io/
SENTRY_DSN=https://your-dsn.ingest.sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_DEBUG=false
SENTRY_SESSION_SAMPLE_RATE=1.0
SENTRY_ENABLE_PERFORMANCE=true
SENTRY_ENABLE_REPLAY=false
SENTRY_REPLAY_SESSION_SAMPLE_RATE=0.1
SENTRY_REPLAY_ERROR_SAMPLE_RATE=1.0

# Analytics (Plausible)
# Get your API key from: https://plausible.io/
ANALYTICS_DOMAIN=localhost
ANALYTICS_API_KEY=your-plausible-api-key
ANALYTICS_SAMPLE_RATE=1.0

# =============================================================================
# External Services
# =============================================================================

# Email Service (Resend)
# Get your API key from: https://resend.com/
EMAIL_API_KEY=re_your_api_key_here
EMAIL_FROM_ADDRESS=dev@parsify.dev

# GitHub OAuth (for authentication)
# Get your credentials from: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth (for authentication)
# Get your credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# Development Configuration
# =============================================================================
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_TEST_DATA=true
ENABLE_MOCK_SERVICES=false

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ADVANCED_TOOLS=true
ENABLE_FILE_UPLOADS=true
ENABLE_USER_AUTHENTICATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_BETA_FEATURES=true
ENABLE_DEBUG_MODE=true

# =============================================================================
# Performance Configuration
# =============================================================================
ENABLE_CACHING=true
CACHE_TIMEOUT=300
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_MINIFICATION=true
ENABLE_BUNDLE_ANALYSIS=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# Queue Configuration
# =============================================================================
ANALYTICS_QUEUE_NAME=analytics-events
UPLOAD_QUEUE_NAME=file-uploads
NOTIFICATIONS_QUEUE_NAME=notifications

# =============================================================================
# Scheduled Tasks
# =============================================================================
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE=0 */6 * * *
CLEANUP_RETENTION_DAYS=7

BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

ANALYTICS_ENABLED=true
ANALYTICS_SCHEDULE=0 * * * *
ANALYTICS_AGGREGATION_WINDOW=3600

# =============================================================================
# DNS and Domain Configuration
# =============================================================================
DOMAIN=localhost
API_DOMAIN=api.localhost
CDN_DOMAIN=cdn.localhost

# Cloudflare Zone ID (for DNS management)
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# =============================================================================
# Testing Configuration
# =============================================================================
TEST_DATABASE_ID=test
TEST_API_BASE_URL=http://localhost:8787
TEST_LOG_LEVEL=debug
TEST_ENABLE_MOCKS=true

# =============================================================================
# CI/CD Configuration
# =============================================================================
CI=false
BUILD_NUMBER=
COMMIT_SHA=
BRANCH_NAME=main

# =============================================================================
# Health Check Configuration
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Incident Response
# =============================================================================
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_TO=admin@parsify.dev
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=your-slack-webhook-url

# =============================================================================
# Compliance and Security
# =============================================================================
GDPR_ENABLED=false
CCPA_ENABLED=false
DATA_RETENTION_DAYS=365
SECURITY_HEADERS_ENABLED=true
