{
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"style": {
				"useSelfClosingElements": "off",
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useSemanticElements": "off",
				"useButtonType": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"performance": {
				"noDelete": "off"
			}
		}
	},
	"files": {
		"ignore": ["node_modules/**", "out/**", ".next/**", "*.min.js", "pnpm-lock.yaml"]
	}
}
