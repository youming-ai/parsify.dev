{
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"useSelfClosingElements": "off"
			}
		}
	},
	"files": {
		"ignore": ["node_modules/**", ".next/**", "*.min.js", "pnpm-lock.yaml", "src/__tests__/**"]
	}
}
