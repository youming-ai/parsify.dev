{
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"semicolons": "always"
		}
	},
	"files": {
		"ignore": [
			"node_modules/**",
			"dist/**",
			"out/**",
			".next/**",
			"coverage/**",
			"*.min.js",
			"*.d.ts",
			"*.config.*",
			"**/*.test.*",
			"**/*.spec.*",
			"pnpm-lock.yaml",
			"*.toml",
			"*.jsonc",
			"*.sh",
			"*.md",
			".env*"
		]
	}
}
