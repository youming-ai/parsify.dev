{
  "name": "parsify-dev",
  "version": "1.0.0",
  "private": true,
  "description": "Essential Developer Tools - Privacy-first utilities running entirely in your browser.",
  "homepage": "https://parsify.dev",
  "repository": "https://github.com/youming-ai/parsify.dev",
  "author": "Youming <ikashue@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && bunx opennextjs-cloudflare build --skipNextBuild",
    "start": "next start",
    "preview": "bunx wrangler dev",
    "deploy": "bunx wrangler deploy",
    "deploy:cf": "bun run build && bun run deploy",
    "lint": "bunx biome check ./src",
    "lint:fix": "bunx biome check --fix ./src",
    "format": "bunx biome format --write ./src",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:coverage:check": "vitest --coverage",
    "prepare": "husky",
    "clean": "rm -rf node_modules .next .open-next .wrangler"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": ["biome check --fix --no-errors-on-unmatched"],
    "*.{ts,tsx}": ["vitest related --run --passWithNoTests"]
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-switch": "^1.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "next": "^15.5.9",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "smol-toml": "^1.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "dompurify": "^3.1.7",
    "spark-md5": "^3.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@next/bundle-analyzer": "^15.5.9",
    "@opennextjs/cloudflare": "^1.14.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^22.19.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "@types/dompurify": "^3.0.5",
    "@types/spark-md5": "^3.0.5",
    "wrangler": "^4.56.0"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.5"
}
