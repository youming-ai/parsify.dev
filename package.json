{
  "name": "parsify-dev",
  "version": "1.0.0",
  "description": "Online Developer Tools Platform",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:performance": "node tests/performance/runner.js",
    "test:performance:smoke": "node tests/performance/runner.js --url http://localhost:8787 --concurrency 5 --requests 25",
    "test:performance:full": "node tests/performance/runner.js --url http://localhost:8787 --concurrency 20 --requests 100 --fail-on-threshold",
    "test:performance:ci": "node tests/performance/runner.js --url $API_BASE_URL --concurrency 10 --requests 50 --output ./performance-reports --fail-on-threshold",
    "test:load": "vitest run tests/load/comprehensive-load-test.test.ts",
    "test:load:smoke": "vitest run tests/load/scenarios/concurrent-auth-load.test.ts --testNamePattern='small team'",
    "test:load:quick": "vitest run tests/load/comprehensive-load-test.test.ts --testNamePattern='small team|medium team|developer workflow'",
    "test:load:full": "vitest run tests/load/comprehensive-load-test.test.ts",
    "test:load:stress": "vitest run tests/load/comprehensive-load-test.test.ts --testNamePattern='stress test|endurance test'",
    "test:load:tools": "vitest run tests/load/scenarios/simultaneous-tools-load.test.ts",
    "test:load:auth": "vitest run tests/load/scenarios/concurrent-auth-load.test.ts",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "db:migrate": "wrangler d1 execute parsify-dev --file=./migrations/001_initial.sql",
    "db:seed": "wrangler d1 execute parsify-dev --file=./migrations/seed.sql"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-router": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "commander": "^12.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "jsdom": "^23.2.0",
    "lint-staged": "^14.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.0.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
