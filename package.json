{
	"name": "@parsify/web",
	"version": "1.0.0",
	"description": "Online Developer Tools Platform",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "opennextjs-cloudflare build",
		"build:next": "next build",
		"build:pages": "pnpm run build:next && npx @opennextjs/cloudflare@latest",
		"start": "next start",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"lint": "biome check .",
		"format": "biome format . --write",
		"type-check": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:e2e": "playwright test",
		"analyze": "ANALYZE=true pnpm run build:next",
		"analyze:open": "open .next/bundle-analyzer-client.html",
		"clean": "rm -rf node_modules out .next dist .open-next",
		"clean:build": "rm -rf .next .open-next",
		"postbuild": "echo 'âœ… Build completed successfully'",
		"prepare": "husky",
		"precommit": "lint-staged",
		"size-check": "bundlesize"
	},
	"dependencies": {
		"@microsoft/clarity": "^1.0.0",
		"@monaco-editor/react": "^4.6.0",
		"@opennextjs/cloudflare": "^1.11.0",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-progress": "^1.1.7",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-switch": "^1.2.6",
		"@types/node": "^22.0.0",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"autoprefixer": "^10.4.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.0",
		"lucide-react": "^0.460.0",
		"monaco-editor": "^0.52.0",
		"next": "16.0.1",
		"next-themes": "^0.4.6",
		"postcss": "^8.5.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tailwind-merge": "^2.5.0",
		"tailwindcss": "^3.4.0",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.7.0",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@vitejs/plugin-react": "^5.1.0",
		"@vitest/coverage-v8": "^4.0.5",
		"babel-plugin-react-compiler": "^1.0.0",
		"bundlesize": "^0.18.1",
		"husky": "^9.1.7",
		"jsdom": "^27.0.1",
		"lint-staged": "^16.2.6",
		"playwright": "^1.48.0",
		"vitest": "^4.0.5",
		"webpack-bundle-analyzer": "^4.10.2",
		"wrangler": "^4.45.1"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md}": ["biome format --write"]
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=9"
	},
	"packageManager": "pnpm@10.18.3"
}
