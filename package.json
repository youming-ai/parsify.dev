{
	"name": "parsify-dev",
	"version": "1.0.0",
	"description": "Online Developer Tools Platform",
	"private": true,
	"type": "module",
	"workspaces": ["apps/*"],
	"scripts": {
		"dev": "pnpm run --parallel dev",
		"dev:unified": "./scripts/dev-unified.sh",
		"dev:web": "cd apps/web && pnpm dev",
		"build": "./scripts/build-unified.sh",
		"deploy": "./scripts/build-unified.sh && npx wrangler pages deploy dist --project-name parsify-dev",
		"clean": "find . -name 'node_modules' -exec rm -rf {} + 2>/dev/null; rm -rf dist/ out/ .next/",
		"setup": "pnpm install",
		"postinstall": "chmod +x scripts/*.sh",
		"lint": "biome check .",
		"format": "biome format . --write"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"typescript": "^5.6.3",
		"wrangler": "^4.45.1"
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=9"
	},
	"packageManager": "pnpm@10.18.3"
}
